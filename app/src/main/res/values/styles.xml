<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainButton">
        <item name="android:layout_marginTop">@dimen/button_marginTop</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:outlineProvider">none</item>
        <item name="cornerRadius">@dimen/main_button_cornerRadius</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_textSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="settingsText">
        <item name="android:theme">@style/Theme.PlaylistMaker.Settings</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:paddingVertical">@dimen/settings_paddingVertical</item>
        <item name="android:textSize">@dimen/textSize16</item>
        <item name="android:layout_marginStart">@dimen/text_margin</item>
        <item name="android:layout_marginTop">@dimen/text_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/text_margin</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="settingsButton">
        <item name="android:theme">@style/Theme.PlaylistMaker.Settings</item>
        <item name="android:layout_margin">@dimen/settings_image_margin</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="searchText">
        <item name="android:textColor">@color/search_small_text</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="searchErrorImage">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">102dp</item>
    </style>

    <style name="searchErrorText">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/search_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="searchToolbarTitleStyle">
        <item name="android:theme">@style/Theme.PlaylistMaker.PopupOverlay</item>
        <item name="android:layout_margin">@dimen/settings_image_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:titleMarginStart">10dp</item>
    </style>

    <style name="settingsToolbarTitleStyle">
        <item name="navigationIconTint">@color/white</item>
<!--        <item name="android:theme">@style/Theme.PlaylistMaker.PopupOverlay</item>-->
        <item name="android:layout_margin">@dimen/settings_image_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:titleMarginStart">10dp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
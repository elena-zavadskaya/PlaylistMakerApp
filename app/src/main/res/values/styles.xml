<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainButton">
        <item name="android:layout_marginTop">@dimen/button_marginTop</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:outlineProvider">none</item>
        <item name="cornerRadius">@dimen/main_button_cornerRadius</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_textSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="settingsText">
        <item name="android:theme">@style/Theme.PlaylistMaker.Settings</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:paddingVertical">@dimen/settings_paddingVertical</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:layout_marginStart">@dimen/text_margin</item>
        <item name="android:layout_marginTop">@dimen/text_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/text_margin</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="settingsButton">
        <item name="android:theme">@style/Theme.PlaylistMaker.Settings</item>
        <item name="android:layout_margin">@dimen/settings_image_margin</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>